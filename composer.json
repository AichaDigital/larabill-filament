{
    "name": "aichadigital/larabill-filament",
    "description": "Filament admin panel for Larabill billing package",
    "keywords": [
        "Aicha Digital",
        "laravel",
        "larabill-filament"
    ],
    "homepage": "https://github.com/aichadigital/larabill-filament",
    "license": "MIT",
    "authors": [
        {
            "name": "Abdelkarim Mateos Sanchez",
            "email": "abdelkarim.mateos@castris.com",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/AichaDigital/larabill.git"
        }
    ],
    "require": {
        "php": "^8.3",
        "aichadigital/larabill": "dev-main || ^0.4",
        "filament/filament": "^4.0",
        "illuminate/contracts": "^12.0",
        "lara-zeus/spatie-translatable": "^1.0",
        "spatie/laravel-package-tools": "^1.16",
        "spatie/laravel-translatable": "^6.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^10.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "AichaDigital\\LarabillFilament\\": "src/",
            "AichaDigital\\LarabillFilament\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AichaDigital\\LarabillFilament\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AichaDigital\\LarabillFilament\\LarabillFilamentServiceProvider"
            ],
            "aliases": {
                "LarabillFilament": "AichaDigital\\LarabillFilament\\Facades\\LarabillFilament"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
